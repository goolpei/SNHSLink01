<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:padding="25dp"
    android:gravity="center"
    tools:context=".StudentInterface.StudentApplicationStatus">

    <!-- Title -->
    <TextView
        android:id="@+id/textview_status_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Application Status"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:paddingBottom="16dp" />

    <!-- Unique ID -->

    <TextView
        android:id="@+id/textview_user_unique_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#555555"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:hint="Unique ID will appear here" />

    <!-- Divider Line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"/>

    <!-- Application Status Display -->
    <TextView
        android:id="@+id/textview_application_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="There is no application status yet..."
        android:textAlignment="center"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="18sp"
        android:padding="12dp"
        android:background="@drawable/status_background"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>

    <!-- Divider Line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_marginBottom="16dp" />

    <!-- Exit Button -->
    <Button
        android:id="@+id/button_exit"
        android:backgroundTint="@color/blue"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="EXIT"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"/>
</LinearLayout>
